{
    "Version":"2012-10-17",
    "Statement":[
      {
			"Sid": "PolicyForAllowUploadWithACL",
			"Effect": "Allow",
			"Principal": {
				"AWS": "arn:aws:iam::414057778078:user/github"
			},
			"Action": [
            "s3:DeleteObject",
            "s3:GetBucketLocation",
            "s3:GetObject",
            "s3:ListBucket",
            "s3:PutObject"
        ],
			"Resource": [
			    "arn:aws:s3:::${bucket}/*",
			    "arn:aws:s3:::${bucket}"
			]
		},
		{
            "Sid": "PublicReadGetObject",
            "Effect": "Allow",
            "Principal": "*",
            "Action": [
                "s3:GetObject"
            ],
            "Resource": [
                "arn:aws:s3:::${bucket}/*"
            ]
        }
    ]
 }